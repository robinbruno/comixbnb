<div class="confirmation-box col-md-4">
  <div class="listing-price">
    <div class="form-group">
      <h4>$<%= @comic.price %></h4>

      <%= simple_form_for [@comic, @booking] do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>

        <h5>Subtotal: <strong>$<%= @comic.price %></strong></h5><br>

        <%= f.submit "Request to book", class: "btn btn-danger form-control" %>
        <br><br>
        <p class="text-center" style="color: grey">You won't be charged yet</p>
        <p class="text-center" style="color: grey">-- Or --</p>

        <button class="btn btn-primary custom-link form-control"><%= link_to "Contact owner", conversations_path %></button>
      <% end %>
    </div>
  </div>
</div>
