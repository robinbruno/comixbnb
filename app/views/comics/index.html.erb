
<div class="container">
  <div class="row justify-content-center">
  <% @comics.each do |comic| %>
    <div class="col-md-4 col-sm-8 col-lg-4">
      <div class="card mb-4 custom-card">
        <h5 class="card-title font-weight-bold text-center"><%= comic.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted font-weight-bold text-center">by <%= comic.author %></h6>
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="card-text"><strong>Genre:</strong> <%= comic.genre %></p>
            <p class="card-text"><strong>Owner:</strong> <%= comic.user.first_name %></p>
          </div>
          <div class="poster-container">
          <%= image_tag comic.poster, class: "poster-image" %>
          </div>
        </div>
          <div>
        <%= link_to "", comic, class: "btn btn-info btn-custom" %>
         </div>
      </div>
    </div>
  <% end %>
</div>
</div>
