<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="col-md-6">
    <div class="card p-4 shadow">
      <h5 class="card-title text-center mb-4">Comic Details</h5>
      <div class="card-body">
        <h3 class="tlt text-center"><%= @comic.title %></h3>
        <p class="ids"><strong>Author:</strong> <%= @comic.author %></p>
        <p class="ids"><strong>Genre:</strong> <%= @comic.genre %></p>
        <p class="ids"><strong>Published in:</strong> <%= @comic.published_in %></p>
        <hr>
        <h4 class="text-center">Book the Comic</h4>
        <div style="display: flex;justify-content: center;">
        <%= simple_form_for([@comic, @booking]) do |f| %>
          <div class="mb-3 text-center"> 
            <%= f.input :start_date, html5: true, input_html: { class: "form-control", placeholder: "Start Date" } %>
          </div>
          <div class="mb-3 text-center">
            <%= f.input :end_date, html5: true, input_html: { class: "form-control", placeholder: "End Date" } %>
          </div>
          <div class="text-center">
            <%= f.button :submit, "Book Comic", class: "btn btn-secondary" %> <!-- Bouton en gris -->
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
