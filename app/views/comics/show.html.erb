<!DOCTYPE html>
<html>
<head>
  <title>Comic Details</title>
<body>
  <div class="container">
    <h3 Class="tlt"><%= @comic.title %></h1>
    <p class="ids"><strong>Author:</strong> <%= @comic.author %></p>
    <p class="ids"><strong>Genre:</strong> <%= @comic.genre %></p>
    <p class="ids"><strong>Published in:</strong> <%= @comic.published_in %></p>


    <br><br>

    <div class="text-center">
      <h2>Book the comic</h2>
    </div>

    <div class="text-center">
      <%= form_with(model: @booking, local: true) do |form| %>
        <div class="field">
          <%= form.label :start_date %>
          <%= form.date_field :start_date, class: "no-border" %>
        </div>

        <div class="field">
          <%= form.label :end_date %>
          <%= form.date_field :end_date, class: "no-border" %>
        </div>

        <div class="field">
          <%= form.label :owner_name%><p><%= @comic.user.first_name %></p>
        </div>

        <div class="actions">
          <%= form.submit "Book Comic" %>
        </div>
           <br><br><br><br>
      <% end %>
    </div>
</body>
</html>
